/* pages/indexDetail/indexDetail.wxss */
.title {
  padding: 20rpx;
  text-align: justify;
  /* text-indent: 1em; */
  font-weight: 700;
  font-size: 1.1rem;
}
.image {
  width: 100%;
  height: 340rpx;
  overflow: hidden;
}

image {
  object-fit: contain;
}

.desc {
  margin: 20rpx;
  padding-left: 10rpx;
  text-indent: 2rem;
  text-align: justify;
  border-left: 1px solid rgb(175, 169, 169);
  font-size: 0.8rem;
  color: rgb(73, 72, 72);
}

.detail {
  margin: 20rpx;
  font-size: 1rem;
  text-align: justify;
  text-indent: 2em;
  padding-bottom: 80rpx;
  position: relative;
}

.text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  text-indent: 0;
  font-size: .6rem;
  font-weight: 200;
}